{
  "name": "visual-schedule-builder",
  "version": "0.1.0",
  "description": "A desktop application for creating interactive visual schedules in special education classrooms",
  "main": "dist/main/index.js",
  "author": "JayBubar",
  "license": "MIT",
  "homepage": "https://github.com/JayBubar/visual-schedule-builder#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JayBubar/visual-schedule-builder.git"
  },
  "bugs": {
    "url": "https://github.com/JayBubar/visual-schedule-builder/issues"
  },
  "keywords": [
    "special-education",
    "visual-schedules",
    "electron",
    "react",
    "accessibility",
    "smartboard",
    "autism",
    "classroom-tools",
    "education-technology"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "package": "npm run build && electron-builder",
    "package:dir": "npm run build && electron-builder --dir",
    "clean": "rimraf dist build"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.37",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.0.1",
    "electron": "^22.0.0",
    "electron-builder": "^24.4.0",
    "eslint": "^8.37.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.10.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "electron-store": "^8.1.0",
    "date-fns": "^2.30.0",
    "clsx": "^1.2.1",
    "lucide-react": "^0.216.0"
  },
  "build": {
    "appId": "com.jaybubar.visual-schedule-builder",
    "productName": "Visual Schedule Builder",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Education"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "roots": ["<rootDir>/src", "<rootDir>/tests"],
    "testMatch": ["**/__tests__/**/*.ts?(x)", "**/*.(test|spec).ts?(x)"],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/renderer/$1"
    }
  }
}
