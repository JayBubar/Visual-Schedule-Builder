            {/* Upcoming Events */}
            {upcomingEvents.length > 0 && (
              <div style={{ marginBottom: '1rem' }}>
                <div style={{ fontSize: '1.1rem', fontWeight: '600', marginBottom: '0.5rem' }}>
                  ğŸ”® Coming Up:
                </div>
                {upcomingEvents.map(event => {
                  const daysAway = getDateDaysFromToday(new Date(event.date));
                  return (
