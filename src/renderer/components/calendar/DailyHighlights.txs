            {todayHighlights.length > 0 ? (
              <div style={{
                display: 'grid',
                gridTemplateColumns: 'repeat(auto-fit, minmax(120px, 1fr))',
                gap: '1rem'
              }}>
                {todayHighlights.slice(0, 4).map((highlight, index) => (
                  <div key={index} style={{
