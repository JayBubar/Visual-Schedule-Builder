            {/* Birthdays */}
            {todaysBirthdays.length > 0 && (
              <div style={{ marginBottom: '1rem' }}>
                <div style={{ fontSize: '1.2rem', marginBottom: '0.5rem' }}>ğŸ‚ Birthdays:</div>
                {todaysBirthdays.map(student => (
                  <div key={student.id} style={{
